<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border BorderBrush="Red" BorderThickness="10">
        <StackPanel Margin="10" Background="BlueViolet" Orientation="Vertical">
            <TextBlock Margin="5">Prueba de StackPanel</TextBlock>
            <Button Margin="5" Width="100" MaxWidth="400" HorizontalAlignment="Left">Aceptar</Button>
            <Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom">Cancelar</Button>
        </StackPanel>
    </Border>
</Window>
